{
  "version": 1,
  "entities": {
    "personal": {
      "label": "Personal Finances",
      "type": "individual"
    },
    "alpha_llc": {
      "label": "Alpha LLC",
      "type": "business"
    },
    "beta_corp": {
      "label": "Beta Corporation",
      "type": "business"
    }
  },
  "accounts": {
    "_comment": "Add account GUID to entity mappings here",
    "_example": "abc123-guid-here: personal"
  },
  "patterns": {
    "_comment": "Regex patterns for automatic account matching",
    "alpha_llc": [
      "^Assets:Business:Alpha.*",
      "^Liabilities:Business:Alpha.*",
      "^Equity:Alpha.*"
    ],
    "beta_corp": [
      "^Assets:Business:Beta.*",
      "^Liabilities:Business:Beta.*",
      "^Equity:Beta.*"
    ],
    "personal": [
      "^Assets:Personal.*",
      "^Liabilities:Personal.*",
      "^Equity:Personal.*"
    ]
  }
}
